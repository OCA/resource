<?xml version="1.0" encoding="UTF-8" ?>
<template>
    <t
        t-name="TimelineView"
        t-inherit="web_timeline.TimelineView"
        t-inherit-mode="primary"
    >
        <xpath expr="//button[hasclass('oe_timeline_button_today')]" position="before">
            <button
                class="btn btn-primary btn-sm oe_hr_task_planner_new_task"
                t-if="widget.modelName === 'hr.task'"
            >
            <i t-attf-class="fa fa-plus" title="New" />
            <span class="d-none d-sm-inline"> New</span>
        </button>
        </xpath>
    </t>
</template>
